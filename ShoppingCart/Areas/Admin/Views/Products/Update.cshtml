@model Product

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Product | <a asp-action="Index">Back to list</a></h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="@Model.Id" />

            <div class="form-group mt-1">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mt-1">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mt-1">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mt-1">
                <label>Category</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                    <option></option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group mt-1">
                <label>Current Image</label>
                <input type="hidden" asp-for="ImageName" />
                <img src="/media/products/@Model.ImageName" width=200 onerror="showDefaultImage(this)"/>
            </div>

            <div class="form-group mt-1">
                <label>New Image</label>
                <input asp-for="ImageUpload" class="form-control" />
                <img id="imgpreview" class="pt-2" />
                <span asp-validation-for="ImageUpload" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button class="btn btn-primary">Edit</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        $("#ImageUpload").change(function () {
            readURL(this);
        });
    </script>
    }