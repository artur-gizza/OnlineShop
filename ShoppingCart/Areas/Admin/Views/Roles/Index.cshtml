@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<h1>Roles</h1>

<a asp-action="Create">Add new role</a>

<table class="table table-bordered">
    <tr class="bg-primary text-white text-center">
        <th>Id</th>
        <th>Name</th>
        <th>Members</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>


    @if (@Model.Count() == 0)
    {
        <tr>
            <td colspan="5" class="text-center">No Roles</td>
        </tr>
    }
    else
    {
        foreach (var role in @Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>

                @*displays members with help of TagHelper RolesTagHelper*@
                <td user-role="@role.Id"></td>

                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                </td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                </td>
            </tr>
        }
    }
</table>