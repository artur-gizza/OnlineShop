@model IEnumerable<Category>

<ul class="list-group">
    <li class="list-group-item">
        <a class="nav-link text-dark" asp-area="@ViewBag.Area" asp-controller="Products" asp-action="Index" asp-route-categorySlug="">Все</a>
    </li>

    @foreach (var item in @Model)
    {
        <li class="list-group-item">
            <a class="nav-link text-dark" asp-area="@ViewBag.Area" asp-controller="Products" asp-action="Index" asp-route-categorySlug="@item.Slug">@item.Name</a>
        </li>
    }
</ul>