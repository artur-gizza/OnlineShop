@model SmallCartViewModel

@if (Model != null)
{
    <div class="text-center">
        <p>Products in cart:<b>@Model.NumberOfItems</b></p>
        <p>Total: <b>@Model.TotalAmount.ToString("C2")</b></p>
        <a class="btn btn-primary" asp-controller="Cart" asp-action="Index">Show Cart</a>
    </div>
}
else
{
    <p class="lead m-0">Your cart is empty.</p>
}