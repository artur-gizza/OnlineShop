@model CartViewModel

@{
    ViewData["Title"] = "Cart Overview";
}

@if (Model.CartItems.Count > 0)
{
    <table class="table text-center">
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th></th>
            <th>Total</th>
        </tr>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.ProductPrice.ToString("C2")</td>
                <td>@item.Quanity</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Add" asp-route-id="@item.ProductId">+</a>
                    <a class="btn btn-info btn-sm" asp-action="Decrease" asp-route-id="@item.ProductId">-</a>
                    <a class="btn btn-danger btn-sm" asp-action="Remove" asp-route-id="@item.ProductId">Remove</a>
                </td>
                <td>@item.Total.ToString("C2")</td>
            </tr>
        }
        <tr>
            <td colspan="3"></td>
            <td><b>Grand Total:</b></td>
            <td> @Model.GrandTotal.ToString("C2")</td>
        </tr>
        <tr>
            <td colspan="4"></td>
            <td>
                <a class="btn btn-primary" href="#">Checkout</a>
            </td>
        </tr>
    </table>
}
else
{
    <h3 class="display-4 text-center">Your cart is empty.</h3>
}
